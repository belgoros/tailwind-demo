<%= form_with(model: post, local: true, class: "mt-2 w-full max-w-md") do |form| %>
  <%= render 'shared/error_messages', object: form.object%>

  <div class="mt-4 mb-4">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-input mt-1 block w-full" %>
  </div>

  <div class="mt-4 mb-6">
    <%= form.label :body %>
    <%= form.text_area :body, class: "form-textarea block w-full" %>
  </div>

  <div class="flex items-center justify-between">
    <%= form.submit class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>

    <%= link_to 'Back', posts_path, class: "inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" %>
  </div>
<% end %>
